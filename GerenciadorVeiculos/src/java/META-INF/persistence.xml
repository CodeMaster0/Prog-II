<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="Gerenciador_Veiculos" transaction-type="RESOURCE_LOCAL">
    <class>modelo.Usuario</class>
    <class>modelo.Conta</class>
    <class>modelo.Adm</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <!-- Altere os valores conforme sua configuração de banco -->
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Gastos"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <!-- Para criar as tabelas automaticamente -->
      <!--property name="eclipselink.ddl-generation" value="create-tables"/-->
      <!-- Para alterar tabelas, por exemplo, um novo atributo adicionado na classe -->
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
    </properties>
  </persistence-unit>
</persistence>
